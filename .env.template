# Domain for SSL certificate and nginx config
DOMAIN=your-domain.com

# Docker image tag
OPENCLAW_IMAGE=openclaw:latest

# Gateway network binding (lan, loopback, tailnet)
OPENCLAW_GATEWAY_BIND=lan
OPENCLAW_GATEWAY_PORT=18789

# Gateway auth token - generate with: openssl rand -hex 24
OPENCLAW_GATEWAY_TOKEN=<your-secure-token-here>

# Session keys - generate each with: openssl rand -hex 32
CLAUDE_WEB_COOKIE=<generate-with-openssl-rand-hex-32>
CLAUDE_AI_SESSION_KEY=<generate-with-openssl-rand-hex-32>
CLAUDE_WEB_SESSION_KEY=<generate-with-openssl-rand-hex-32>

# OpenClaw config directory (mounted into container)
OPENCLAW_CONFIG_DIR=./.openclaw
OPENCLAW_WORKSPACE_DIR=./.openclaw/workspace

# Keyring password for GPG encryption - generate with: openssl rand -hex 24
GOG_KEYRING_PASSWORD=<your-keyring-password>

# OAuth2 Proxy (Google authentication for dashboard)
# See OAUTH2_PROXY.md for setup instructions
OAUTH2_PROXY_CLIENT_ID=<from-google-console>
OAUTH2_PROXY_CLIENT_SECRET=<from-google-console>
OAUTH2_PROXY_COOKIE_SECRET=<generate-with-openssl-rand-base64-32>

XDG_CONFIG_HOME=/home/node/.openclaw
